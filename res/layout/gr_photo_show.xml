<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView 
        android:id="@+id/grid_image_view"
        android:layout_width="@dimen/ar_w_choosed_photo_size"
        android:layout_height="@dimen/ar_w_choosed_photo_size"
        android:src="@drawable/choose_image_back"
        android:scaleType="centerCrop"/>
    
    <LinearLayout 
        android:id="@+id/grid_image_remove"
        android:layout_alignTop="@id/grid_image_view"
        android:layout_alignRight="@id/grid_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
	    android:clickable="true"
	    android:padding="3dp">
        <ImageView 
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:src="@drawable/ic_item_delete"
	        />
    </LinearLayout>
    
    
</RelativeLayout>
