<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/ar_d_comment_block_border"
    >
    <com.concordiatec.vic.widget.CircleImageView 
        android:layout_alignParentStart="true"
        android:id="@+id/ar_d_commentor_photo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="asd"
        android:src="@drawable/demo_avatar"
        />
    <LinearLayout 
        android:id="@+id/detail_comment_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ar_d_commentor_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <TextView 
	            android:id="@+id/ar_d_commentor_name"
	            android:layout_width="wrap_content"
	            android:layout_height="16dp"
	            android:textStyle="bold"
	            android:textSize="@dimen/text_16"
	            android:text="@string/demo_writer_name"/>
            
            <TextView 
	            android:id="@+id/ar_d_comment_time"
	            android:layout_width="wrap_content"
	            android:layout_height="16dp"
	            android:textSize="@dimen/text_12"
	            android:layout_marginLeft="16dp"
	            android:textColor="@color/mni_write_time"
	            android:text="@string/demo_write_time"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ar_d_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:text="@string/demo_comment_contents" />
        </RelativeLayout>
        
        
    </LinearLayout>
</RelativeLayout>
