<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sort_wrap_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
 
    <LinearLayout 
        android:id="@+id/sort_current_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
		android:clickable="true"
		android:background="@drawable/sorting_top_style">
         <TextView
		        android:id="@+id/sort_current_select"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/sort_top_row_height"
		        android:paddingLeft="25dp"
		        android:paddingRight="20dp"
		        android:gravity="center_vertical"
		        android:drawableRight="@drawable/drop_down_24"
		        android:textSize="@dimen/text_16"
		        android:textColor="@color/normal_font"
		        android:text="@string/sort_all" />
    </LinearLayout>
    
	<RelativeLayout
	    android:id="@+id/sort_content"
	    android:layout_below="@id/sort_current_select_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@android:color/white"
	    android:visibility="gone"
	    >
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        >
	        <TextView
		        android:id="@+id/sort_all"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/sort_item_padding_vert_16"
		        android:paddingBottom="@dimen/sort_item_padding_vert_16"
		        android:paddingRight="@dimen/sort_item_padding_hor_16"
		        android:paddingLeft="@dimen/sort_item_padding_hor_16"
		        android:gravity="center_vertical"
		        android:text="@string/sort_all"
		        android:textSize="@dimen/text_16"
		        android:clickable="true"
		        android:drawableLeft="@drawable/quantum_ic_home_grey600_24"
		        android:drawablePadding="@dimen/sort_item_drawable_padding"
		        android:background="@drawable/sort_click_selector"
		        />
		    <TextView
		        android:id="@+id/hot_deal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/sort_item_padding_vert_16"
		        android:paddingBottom="@dimen/sort_item_padding_vert_16"
		        android:paddingRight="@dimen/sort_item_padding_hor_16"
		        android:paddingLeft="@dimen/sort_item_padding_hor_16"
		        android:gravity="center_vertical"
		        android:text="@string/hot_deal"
		        android:textSize="@dimen/text_16"
		        android:clickable="true"
		        android:drawableLeft="@drawable/ic_whats_hot_color_24"
		        android:drawablePadding="@dimen/sort_item_drawable_padding"
		        android:background="@drawable/sort_click_selector"
		        />
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/sort_item_line_height"
		        android:layout_marginTop="@dimen/sort_item_line_margin_vert"
		        android:layout_marginBottom="@dimen/sort_item_line_margin_vert"
		        android:background="#FFDDDDDD"
		        android:clickable="true"
		        />
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/sort_item_padding_vert_thick"
		        android:paddingBottom="@dimen/sort_item_padding_vert_thick"
		        android:paddingLeft="@dimen/sort_item_padding_hor"
		        android:gravity="center_vertical"
		        android:text="@string/sort_title_exploration"
		        android:textSize="@dimen/text_12"
		        android:textColor="@color/normal_font"
		        />
		    
		    <TextView
		        android:id="@+id/neighbouring_store"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/sort_item_padding_vert_16"
		        android:paddingBottom="@dimen/sort_item_padding_vert_16"
		        android:paddingRight="@dimen/sort_item_padding_hor_16"
		        android:paddingLeft="@dimen/sort_item_padding_hor_16"
		        android:gravity="center_vertical"
		        android:text="@string/neighbouring_store"
		        android:textSize="@dimen/text_16"
		        android:clickable="true"
		        android:drawableLeft="@drawable/quantum_ic_explore_nearby_grey600_24"
		        android:drawablePadding="@dimen/sort_item_drawable_padding"
		        android:background="@drawable/sort_click_selector"
		        />
		    
		    <TextView
		        android:id="@+id/frequented_store"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/sort_item_padding_vert_16"
		        android:paddingBottom="@dimen/sort_item_padding_vert_16"
		        android:paddingRight="@dimen/sort_item_padding_hor_16"
		        android:paddingLeft="@dimen/sort_item_padding_hor_16"
		        android:gravity="center_vertical"
		        android:text="@string/frequented_store"
		        android:textSize="@dimen/text_16"
		        android:clickable="true"
		        android:drawableLeft="@drawable/ic_action_shop"
		        android:drawablePadding="@dimen/sort_item_drawable_padding"
		        android:background="@drawable/sort_click_selector"
		        />
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/sort_item_line_height"
		        android:layout_marginTop="@dimen/sort_item_line_margin_vert"
		        android:layout_marginBottom="@dimen/sort_item_line_margin_vert"
		        android:background="#FFDDDDDD"
		        android:clickable="true"
		        />
		    
		    <RelativeLayout
		        android:id="@+id/select_category"
		        android:layout_width="match_parent"
			    android:layout_height="wrap_content" >
		        <TextView
			        android:layout_width="match_parent"
				    android:layout_height="wrap_content"
			        android:paddingTop="@dimen/sort_item_padding_vert_16"
			        android:paddingBottom="@dimen/sort_item_padding_vert_16"
			        android:paddingRight="@dimen/sort_item_padding_hor_16"
			        android:paddingLeft="@dimen/sort_item_padding_hor_16"
			        android:gravity="center_vertical"
			        android:text="@string/select_category"
			        android:textSize="@dimen/text_16"
			        android:clickable="true"
			        android:drawableLeft="@drawable/ic_navigation_apps"
			        android:drawablePadding="@dimen/sort_item_drawable_padding"
			        android:background="@drawable/sort_click_selector"
			        />
		        <ImageView
		            android:layout_width="24dp"
		            android:layout_height="24dp" 
		            android:src="@drawable/drop_down_24"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="10dp"
		            />
		    </RelativeLayout>
		    
		    
		    
	    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>