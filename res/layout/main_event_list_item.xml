<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mni_layout_border_width"
    android:paddingBottom="@dimen/mni_layout_bottom_shadow_width"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/list_item_shadow">
    
    <!-- 쿠폰 이미지 -->
    <com.concordiatec.vic.widget.CircleImageView 
        android:id="@+id/main_coupon_img"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/cp_img_width"
        android:layout_height="@dimen/cp_img_height"
        android:layout_marginLeft="@dimen/cp_img_margin_h"
        android:layout_marginRight="@dimen/cp_img_margin_h"
        android:layout_marginTop="@dimen/cp_img_margin_top"
        android:contentDescription="@string/coupon_img"
        android:src="@drawable/demo_coupon_img"
        />
    <!-- 거리 -->
    <TextView 
        android:id="@+id/shop_distance"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/cp_img_margin_top"
        android:text="@string/format_location_range_meter"
        android:textColor="@color/coupon_normal_ctrl_text"
        />
    
    <!-- 쿠폰과 가게 정보 -->
    <LinearLayout
        android:id="@+id/main_coupon_info"
        android:layout_toRightOf="@id/main_coupon_img" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cp_info_margin_h"
        android:layout_marginRight="@dimen/cp_info_margin_h"
        android:layout_marginTop="@dimen/cp_info_margin_top"
        android:orientation="vertical">
        
        <!-- 쿠폰 태그 -->
        <com.concordiatec.vic.widget.TagView 
            android:id="@+id/coupon_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:visibility="gone"
	        android:gravity="center_vertical"
            />
        
        <!-- 가게이름 -->
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/demo_shop_name"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"
	        android:gravity="center_vertical"
            />
        
        <!-- 쿠폰 타이틀 -->
        <TextView 
            android:id="@+id/coupon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/demo_coupon_title"
            android:textSize="@dimen/text_14"
	        android:gravity="center_vertical"
            />
        
        <!-- 가격 레이아웃 -->
        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
            <!-- 쿠폰가격 -->
	        <TextView
	            android:id="@+id/coupon_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/format_price_string" 
	            android:textSize="@dimen/text_16"
	            android:textStyle="bold"
	            android:gravity="center_vertical"
	            />
	        <!-- 상품 원가 -->
	        <TextView
	            android:id="@+id/coupon_list_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_marginLeft="@dimen/cp_info_price_margin"
	            android:text="@string/format_price_string"
	            android:textColor="@color/coupon_list_price"
	            android:textSize="@dimen/text_12"
	            android:gravity="center_vertical"/>
        </LinearLayout>
        <!-- 마감 시간 -->
        <TextView
            android:id="@+id/coupon_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/format_end_time"
            android:textSize="@dimen/text_14"
            android:textColor="@color/effect_color"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_action_schedule"
            android:drawablePadding="3dp"
            />
    </LinearLayout>
    <!-- 가격 정보 끝 -->
    
    <!-- 아래 측 버튼 -->
    <LinearLayout
        android:id="@+id/coupon_ctrl_layout"
        android:layout_below="@id/main_coupon_info"
        android:layout_width="match_parent" 
        android:layout_height="@dimen/cp_ctrl_btn_layout_height"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="@dimen/cp_ctrl_margin_top"
        android:orientation="horizontal">
        <!-- 잔여 -->
        <LinearLayout
            android:id="@+id/coupon_surplus"
            android:layout_width="0dp"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
	        android:background="@drawable/cp_btn_border_t_r_b">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/coupon_surlus_icon"
                android:src="@drawable/ic_maps_local_offer"/>
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@string/cp_surplus"
	            android:textColor="@color/coupon_normal_ctrl_text"
	            android:gravity="center"
	            android:textSize="@dimen/text_16"/>
        </LinearLayout>
        <!-- 찜하기 -->
        <LinearLayout
            android:id="@+id/coupon_favorate_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
	        android:background="@drawable/cp_btn_border_t_b">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/coupon_favorate"
                android:src="@drawable/ic_action_turned_in"/>
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@string/cp_favorite"
	            android:gravity="center"
	            android:textColor="@color/coupon_normal_ctrl_text"
	            android:textSize="@dimen/text_16"/>
        </LinearLayout>
        
    </LinearLayout>
</RelativeLayout>
